{
  "name": "chrome-extension-ts",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/jigsaw.png",
      "32": "images/jigsaw.png",
      "48": "images/jigsaw.png",
      "128": "images/jigsaw.png"
    }
  },
  "icons": {
    "16": "images/jigsaw.png",
    "48": "images/jigsaw.png",
    "128": "images/jigsaw.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
